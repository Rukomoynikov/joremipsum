@media only screen and (max-width: 992px)

  body
    font-size 16px

    > .wrap
      width 100%
      margin 0px auto

      > .top_menu
        padding 0px 20px

        > .fa
          display block

        > .menu
          position absolute
          top 78px
          z-index 2
          display none
          margin 0px -20px
          width 100%

          > a
            width 100%
            text-align center
            background #ffffff
            border-bottom 1px solid black

      > .info_block
        > p
          width auto

      > .info_block_2
